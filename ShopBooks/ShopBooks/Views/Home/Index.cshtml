@model IEnumerable<ShopBooks.Models.Sach>




@{
    ViewBag.Title = "ShopBooks";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="span9">
    <div class="well np">
        <div id="myCarousel" class="carousel slide homCar">
            <div class="carousel-inner">
                <div class="item">
                    <img style="width:100%" src="~/Content/assets/img/2.jpg" style="height:105px" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">
                        <p><span>Ở đâu rẻ nhất chúng tôi rẻ hơn!!!</span></p>
                    </div>
                </div>
                <div class="item">
                    <img style="width:100%" src="~/Content/assets/img/3.jpg" style="height:105px" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">
                        <p><span>Ở đâu rẻ nhất chúng tôi rẻ hơn!!!</span></p>
                    </div>
                </div>
                <div class="item active">
                    <img style="width:100%" src="~/Content/assets/img/4.jpg" style="height:105px" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">
                        <p><span>Ở đâu rẻ nhất chúng tôi rẻ hơn!!!</span></p>
                    </div>
                </div>
                <div class="item">
                    <img style="width:100%" src="~/Content/assets/img/5.jpg" style="height:105px" alt="bootstrap templates">
                    <div class="carousel-caption">
                        <p><span>Ở đâu rẻ nhất chúng tôi rẻ hơn!!!</span></p>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>

    <!--Sản phẩm mới-->

    <div class="well well-small">
        <h3>Sản phẩm mới</h3>
        <hr class="soften" />
        <div class="row-fluid">
            <div id="newProductCar" class="carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <ul class="thumbnails">
                            @foreach (var item in Model.Take(4))
                            {
                                <li class="span3">
                                    <div class="thumbnail">
                                        <a class="zoomTool" href="/Product/ProductDetails/@item.MaSach" title="add to cart"><span class="icon-search"></span> QUICK VIEW</a>
                                        <a href="#" class="tag"></a>
                                        <a href="/Product/ProductDetails/@item.MaSach"><img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" style="height:105px" alt="bootstrap-ring"></a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>

                </div>
                <a class="left carousel-control" href="#newProductCar" data-slide="prev">&lsaquo;</a>
                <a class="right carousel-control" href="#newProductCar" data-slide="next">&rsaquo;</a>
            </div>
        </div>

        <!--Danh sach san pham-->
        @{
            Html.RenderPartial("ListBook");
        }
    </div>


@model List<ShopBooks.Models.Sach>
@{
    ViewBag.Title = "Browse Category";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="span9">
    <div class="well well-small">
        <hr class="soften" />
        <div class="row-fluid">
            <ul class="thumbnails">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        @Html.Partial("_PartialProduct", item)
                    }
                }
                else
                {
                    @: Không có sản phẩm trong danh mục này
                }
            </ul>
        </div>
        <hr>
    </div>
</div>


